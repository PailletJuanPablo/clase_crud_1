<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Ingresar '}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Ingresar </h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/auth/login" method="POST" >
				<div class="row product-detail">
				
					<div class="col-12 col-md-6">
						<label for="email" class="form-label">Email:</label>
						<input type="email" id="email" name="email" placeholder="Email" class="form-input">
					</div>
				
                    <div class="col-12 col-md-6">
						<label for="password" class="form-label">Contraseña:</label>
						<input type="password" id="password" name="password" placeholder="Contraseña" class="form-input">
					</div>
					
					<div class="col-12 col-md-6">
						<label for="remember" class="form-label">
							Recordarme
							<input type="checkbox" name="remember" class="form-input">
						</label>
					
					</div>
                    
					<div class="col-12">
						<button type="submit" class="buy-now-button"> Ingresar</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>