<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Crear cuenta'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Crear cuenta</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/auth/register" method="POST" >
				<div class="row product-detail">

					<% if (typeof errors == 'array' && errors) { %>
						<% errors.forEach(error => { %>
							<p style="color: red"> <%=error.msg %>  </p>
						   <% }) %>
					<% } %>
					
				
					<div class="col-12 col-md-6">
						<label for="email" class="form-label">Email:</label>
						<input type="email" id="email" name="email" placeholder="Email" class="form-input">
					</div>
				
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre:</label>
						<input type="name" id="name" name="name" placeholder="Nombre" class="form-input">
					</div>
                
                    <div class="col-12 col-md-6">
						<label for="password" class="form-label">Contraseña:</label>
						<input type="password" id="password" name="password" placeholder="Contraseña" class="form-input">
                    </div>
                    
					<div class="col-12">
						<button type="submit" class="buy-now-button">Crear cuenta</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>